{
  "name": "wmf-nest",
  "version": "0.1.0",
  "private": true,
  "description": "Server application for Winnipeg Music Festival online forms",
  "author": "David Sawatzky",
  "license": "UNLICENSED",
  "scripts": {
    "migrate:dev": "dotenvx run --env-file=.env.development -- prisma migrate dev",
    "seed:dev": "dotenvx run --env-file=.env.development -- prisma db seed",
    "prebuild": "rimraf dist",
    "build": "prisma generate && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prisma:generate": "prisma generate --watch",
    "start": "cross-env NODE_ENV=production nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:test": "cross-env NODE_ENV=test nest start --watch",
    "start:swc": "cross-env NODE_ENV=development nest start -b swc --type-check",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json",
    "testvi": "cross-env NODE_ENV=test vitest run",
    "testvi:watch": "cross-env NODE_ENV=test vitest --watch",
    "testvi:cov": "cross-env NODE_ENV=test vitest --run --coverage",
    "testvi:debug": "cross-env NODE_ENV=test vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "testvi:e2e": "cross-env NODE_ENV=test vitest --config ./vitest.config.e2e.mts",
    "types": "ts-node ./src/generate-typings"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@casl/ability": "^6.7.1",
    "@casl/prisma": "^1.4.1",
    "@dotenvx/dotenvx": "^1.10.4",
    "@jest/globals": "^29.7.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/cli": "^10.4.4",
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/devtools-integration": "^0.1.6",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.1",
    "@prisma/client": "^5.18.0",
    "@types/nodemailer": "^6.4.15",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "handlebars": "^4.7.8",
    "mjml": "^4.15.3",
    "nest-winston": "^1.9.7",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^5.18.0",
    "prisma-graphql-type-decimal": "^3.0.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "serverless-http": "^3.2.0",
    "stripe": "^16.8.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.2",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.18",
    "@swc/jest": "^0.2.36",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "^20.16.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "helmet": "^7.1.0",
    "jest": "29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "supertest-graphql": "^1.1.4",
    "ts-loader": "^9.5.1",
    "ts-morph": "^19.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globalSetup": "<rootDir>/test/setup.ts",
    "globalTeardown": "<rootDir>/test/teardown.ts",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "astTransformers": {
            "before": [
              "./src/test/astTransformer.ts"
            ]
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "bash prisma/seed.sh"
  }
}
